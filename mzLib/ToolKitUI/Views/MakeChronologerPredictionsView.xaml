<UserControl x:Class="ToolKitUI.Views.MakeChronologerPredictionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToolKitUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Grid Width="auto" Height="auto">

        <Grid.ColumnDefinitions>
            <!-- Buttons -->
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Buttons -->
        <Grid Grid.Column="0" HorizontalAlignment="Left">
            <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Vertical"  Margin="5">
                <TextBlock Text="Chronologer HI" FontSize="24" Margin="10"/>

                <Button Command="{Binding LoadFileCommand}"
                        Content="Load File" 
                        FontSize="24" 
                        Margin="10"/>

                <Button Command="{Binding RunChronologerCommand}" 
                        Content="Run Chronologer"
                        FontSize="24"
                        Margin="10"/>

                <Button Command="{Binding WriteFileCommand}"
                        Content="Write File" 
                        FontSize="24" 
                        Margin="10"/>

                <CheckBox Command="{Binding ShowNonAmbiguousPsms}"
                          Content="Ambigous Psms" VerticalContentAlignment="Center"
                          FontSize="24"
                          Margin="10"/>

            </StackPanel>
        </Grid>

        <!-- RIght Side -->
        <Grid Grid.Row="0" Grid.Column="1" >

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBox Text="{Binding FilePath}"
                     Grid.Column="0" 
                     Grid.Row="0" 
                     Height="20" 
                     Width="auto" 
                     Margin="10"/>

            <TabControl Grid.Row="1">
                <TabItem Header="Psm File (Original File)">
                    <DataGrid Grid.Column="0" 
                              Grid.Row="1" 
                              Height="auto" 
                              Margin="10"
                              ItemsSource="{Binding FilteredPsms}"
                              AlternatingRowBackground="LightGray"/>
                </TabItem>

                <TabItem Header="Chronologer Predictions">
                    <DataGrid Grid.Column="0" 
                              Grid.Row="1" 
                              Height="auto" 
                              Margin="10"
                              ItemsSource="{Binding LightPsms}"
                              AlternatingRowBackground="LightGray"/>
                </TabItem>
            </TabControl>

        </Grid>

    </Grid>
</UserControl>
